<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="kr.letech.study.cmmn.security.UserMapper">
    <select id="getUserInfo" resultType="kr.letech.study.cmmn.security.vo.UserVO" parameterType="String">
        SELECT USER_ID
             , USER_PW
             , USER_NM
        FROM TB_USER
        WHERE USER_ID = #{userId}
    </select>

    <select id="getUserAuth" resultType="string" parameterType="string">
        SELECT ROLE_ID
          FROM TB_USERAUTH
         WHERE USER_ID = #{userId}
    </select>
</mapper>